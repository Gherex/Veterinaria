<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.MainController">
    <!-- TOP: Banner "VETERINARIA" + Logo -->
    <top>
        <HBox alignment="CENTER" spacing="20">
            <ImageView fitWidth="300" fitHeight="100" preserveRatio="true" Image="@images/banner.png"/>
            <ImageView fitWidth="100" fitHeight="100" preserveRatio="true" Image="@images/logo.png"/>
        </HBox>
    </top>

    <!-- CENTER: Botones + Imagen de perritos -->
    <center>
        <HBox alignment="CENTER" spacing="50">
            <!-- Columna de botones -->
            <VBox spacing="20" alignment="CENTER">
                <Button text="Cargar Datos" styleClass="boton-menu" onAction="#abrirCargarDatos"/>
                <Button text="Ver Datos" styleClass="boton-menu" onAction="#abrirVerDatos"/>
                <Button text="Salir" styleClass="boton-salir" onAction="#salir"/>
            </VBox>

            <!-- Imagen de perritos -->
            <ImageView fitWidth="400" fitHeight="300" preserveRatio="true" Image="@images/perritos.png"/>
        </HBox>
    </center>
</BorderPane>